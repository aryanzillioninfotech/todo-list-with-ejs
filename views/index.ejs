<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>

<body class="p-4">

  <h1 class="text-center mb-4">Todo List</h1>

  <form action="/add-task" method="POST" class="responsive-form">
    <div class="mb-3">
      <label>Task:</label>
      <input type="text" name="task" required class="form-control">
    </div>
    <div class="mb-3">
      <label>Status:</label>
      <select name="status" required class="form-select">
        <option value="" disabled selected>Select Status</option>
        <option value="Pending">Pending</option>
        <option value="Completed">Completed</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary w-100">Add Task</button>
  </form>


  <br>
  <hr><br>

  <div class="table-responsive">
    <table class="table table-bordered w-75 mx-auto text-center">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Task</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% todoData.forEach((todo)=>{ %>
          <tr>
            <td data-label="ID">
              <%= todo.id %>
            </td>
            <td data-label="Task">
              <%= todo.task %>
            </td>
            <td data-label="Status">
              <%= todo.status %>
            </td>
            <td data-label="Action">
              <a href="/delete-task?taskId=<%= todo.id %>" class="btn btn-danger btn-sm">Delete</a>
              <a href="/edit-task?taskId=<%= todo.id %>" class="btn btn-warning btn-sm">Edit</a>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>


</body>

</html>